<!-- Validation failure messages -->
<% if @ccdebt.errors.any? %>
  <% @ccdebt.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Credit Card Debt</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_ccdebt" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for accountname -->
      <div class="form-group">
        <label for="accountname" class="control-label">
          Account Name
        </label>

        <input type="text" id="accountname" name="accountname" placeholder="Account Nickname" class="form-control" value="<%= @ccdebt.accountname %>">
      </div>

      <!-- Label and input for debt_apr -->
      <div class="form-group">
        <label for="debt_apr" class="control-label">
          Stated Credit Card APR
        </label>

        <input type="text" id="debt_apr" name="debt_apr" placeholder="Credit Card APR (Decimal)" class="form-control" value="<%= @ccdebt.debt_apr %>">
      </div>

      <!-- Label and input for debt_balance -->
      <div class="form-group">
        <label for="debt_balance" class="control-label">
          Account Balance
        </label>

        <input type="text" id="debt_balance" name="debt_balance" placeholder="Balance (USD)" class="form-control" value="<%= @ccdebt.debt_balance %>">
      </div>

      <!-- Label and input for debt_term -->
      <div class="form-group">
        <label for="debt_term" class="control-label">
          Balance Term Length
        </label>

        <input type="text" id="debt_term" name="debt_term" placeholder="Time Remaining (Months)" class="form-control" value="<%= @ccdebt.debt_term %>">
      </div>

      <!-- Label and input for user_id -->
        <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= current_user.id %>">
  

      <button class="btn btn-success">
        Add Balance
      </button>
      or
      <a href="/ccdebts">Cancel</a>
    </form>
  </div>
</div>
