<div class="page-header">
  <h3><%= @ftdebt.accountname %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Account Name</dt>
      <dd><%= @ftdebt.accountname %></dd>

      <dt>Stated Fixed Term APR</dt>
      <dd><%= @ftdebt.debt_apr %></dd>

      <dt>Account Balance</dt>
      <dd><%= @ftdebt.debt_balance %></dd>

      <dt>Balance Term Length</dt>
      <dd><%= @ftdebt.debt_term %></dd>


    </dl>

    <div class="btn-group">
      <a href="/ftdebts" class="btn btn-default">
        Back
      </a>
      <a href="/ftdebts/<%= @ftdebt.id %>/edit" class="btn btn-default">
        Edit
      </a>
      <a href="/delete_ftdebt/<%= @ftdebt.id %>" class="btn btn-default" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
