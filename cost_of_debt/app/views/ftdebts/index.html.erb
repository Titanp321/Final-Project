<div class="page-header">
  <h2>
    Fixed Term Debt
    <a href="/ftdebts/new" class="btn btn-default">Add New Fixed Term Debt</a>
  </h2>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Account Name</th>
        <th>Stated Fixed Term APR</th>
        <th>Current Balance</th>
        <th>Balance Term Length</th>
        <th>Actions</th>
      </tr>

      <% @ftdebts.each do |ftdebt| %>
      <tr>
        <td><%= ftdebt.accountname %></td>
        <td><%= ftdebt.debt_apr %></td>
        <td><%= ftdebt.debt_balance %></td>
        <td><%= ftdebt.debt_term %></td>
        <td>
          <a href="/ftdebts/<%= ftdebt.id %>" class="btn btn-default">Show</a>
          <a href="/ftdebts/<%= ftdebt.id %>/edit" class="btn btn-default">Edit</a>
          <a href="/delete_ftdebt/<%= ftdebt.id %>" class="btn btn-default" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
